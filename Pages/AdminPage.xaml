<Page x:Class="School.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Background="CornflowerBlue" Grid.Row="0"/>
        <Grid Background="CornflowerBlue" Grid.Row="2"/>
        <TextBox x:Name="PassTb" Grid.Row="1" Width="230" Height="20" VerticalAlignment="Center" Margin="0 5"/>
        <Button x:Name="CheckBtn" Grid.Row="1" Width="50" Height="25" VerticalAlignment="Bottom" Margin="60" Content="Check" FontSize="10" Foreground="White" Background="CornflowerBlue" Click="CheckBtn_Click"/>

        <TextBlock Text="Language School" FontStyle="Italic" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
        <Image Source="C:\Users\witless\Desktop\School\Resources\school_logo.png" HorizontalAlignment="Left" Stretch="Uniform"  Margin="10 0"/>

    </Grid>
</Page>
