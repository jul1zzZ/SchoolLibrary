<Window x:Class="School.Pages.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School.Pages"
        mc:Ignorable="d"
        Title="AdminWindow" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Background="CornflowerBlue" Grid.Row="0"/>
        <Grid Background="CornflowerBlue" Grid.Row="2"/>
        <TextBox x:Name="PassTb" Grid.Row="1" Width="100" Height="20" VerticalAlignment="Top" Margin="0 5"/>
        <Button x:Name="CheckBtn" Grid.Row="1" Width="40" Height="15" VerticalAlignment="Bottom" Margin="0 5" Content="Check" FontSize="10" Foreground="White" Background="CornflowerBlue" Click="CheckBtn_Click"/>
        
        <TextBlock Text="Language School" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image Source="C:\Users\witless\Desktop\SchoolLibrary-main\Resources\school_logo.png" HorizontalAlignment="Left" Stretch="Uniform" Width="30" Margin="10 0"/>
        
    </Grid>
</Window>
